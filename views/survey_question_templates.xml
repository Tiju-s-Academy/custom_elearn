<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Define the match following question template -->
    <template id="question_match_following" name="Match Following Question">
        <div class="o_survey_match_following_wrapper" t-att-data-question-id="question.id">
            <div class="row">
                <div class="col-md-6">
                    <h5>Items</h5>
                    <div class="o_match_questions" t-att-data-question-id="question.id"/>
                </div>
                <div class="col-md-6">
                    <h5>Match With</h5>
                    <div class="o_match_answers" t-att-data-question-id="question.id"/>
                </div>
            </div>
            <div class="text-muted mt-2 mb-3">
                <small>Drag items from left to match with items on right.</small>
            </div>
        </div>
    </template>

    <!-- Inherit question container as provided in the working example -->
    <template id="question_container_inherit" inherit_id="survey.question_container">
        <xpath expr="." position="inside">
            <t t-if="question.question_type == 'match_following'" t-call="custom_elearn.question_match_following"/>
        </xpath>
    </template>
</odoo>
