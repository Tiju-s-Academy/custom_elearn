<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Inject our script directly into the survey layout template -->
    <template id="survey_match_assets" inherit_id="survey.layout">
        <xpath expr="//head" position="inside">
            <script type="text/javascript" src="/custom_elearn/static/src/js/survey_match_following.js"/>
        </xpath>
    </template>
    
    <!-- Define standalone template for match following questions -->
    <template id="match_following_question_template" name="Match Following Question">
        <div class="js_match_following match_following_container" t-att-data-question-id="question.id">
            <!-- Content will be generated by JavaScript -->
        </div>
    </template>
</odoo>
