<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="survey_question_form_inherit" model="ir.ui.view">
        <field name="name">survey.question.form.inherit</field>
        <field name="model">survey.question</field>
        <field name="inherit_id" ref="survey.survey_question_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='mx-lg-auto w-lg-50 d-none d-sm-block o_preview_questions bg-light']" position="inside">
                <div invisible="question_type != 'match_following'" role="img" aria-label="Match the following" title="Match the following">
                    <span>Match the following</span>
                    <div class="o_match_lines_preview">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fa fa-minus fa-4x" role="img" aria-label="Single Line" title="Single Line"/>
                            <span class="mx-2">─────</span>
                            <i class="fa fa-minus fa-4x" role="img" aria-label="Single Line" title="Single Line"/>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <i class="fa fa-minus fa-4x" role="img" aria-label="Single Line" title="Single Line"/>
                            <span class="mx-2">─────</span>
                            <i class="fa fa-minus fa-4x" role="img" aria-label="Single Line" title="Single Line"/>
                        </div>
                    </div>
                </div>
            </xpath>

            <!-- Add data-type attribute to help frontend identify question type -->
            <xpath expr="//page[@name='answers']" position="inside">
                <field name="match_following_pairs" context="{'default_question_id': id}" invisible="question_type != 'match_following'" data-type="match_following">
                    <tree editable="bottom">
                        <field name="left_option"/>
                        <field name="right_option"/>
                        <field name="score"/>
                    </tree>
                </field>
            </xpath>
        </field>
    </record>
    
    <!-- Add template for frontend rendering of match following question -->
    <template id="match_following_question_template" inherit_id="survey.question">
        <xpath expr="//div[hasclass('o_survey_question_matrix')]" position="after">
            <div t-if="question.question_type == 'match_following'" class="js_match_following match_following_container" 
                 t-att-data-question-id="question.id">
                <!-- Match following UI will be handled by JavaScript -->
                <div class="match_following_pairs">
                    <t t-foreach="question.match_following_pairs" t-as="pair">
                        <div class="match_pair" t-att-data-pair-id="pair.id">
                            <div class="left_option"><t t-esc="pair.left_option"/></div>
                            <div class="right_option"><t t-esc="pair.right_option"/></div>
                        </div>
                    </t>
                </div>
                <!-- Hidden field to store the match following answer -->
                <input type="hidden" name="match_following_result" class="match_following_result" />
            </div>
        </xpath>
    </template>
</odoo>
