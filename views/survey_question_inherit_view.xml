<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Enhance the survey question form to support match following type -->
    <record id="survey_question_form_inherit" model="ir.ui.view">
        <field name="name">survey.question.form.inherit</field>
        <field name="model">survey.question</field>
        <field name="inherit_id" ref="survey.survey_question_form"/>
        <field name="arch" type="xml">
            <!-- Add match_following option to question_type selection field -->
            <field name="question_type" position="attributes">
                <attribute name="options" add="{'match_following': 'Match Following'}" separator=","/>
            </field>
            
            <!-- Add match following pairs tab -->
            <xpath expr="//page[@name='answers']" position="after">
                <page string="Match Following Pairs" invisible="question_type != 'match_following'">
                    <field name="match_following_pairs" context="{'default_question_id': id}">
                        <tree editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="left_option"/>
                            <field name="right_option"/>
                            <field name="score"/>
                        </tree>
                    </field>
                    <group>
                        <field name="shuffle_right_options" />
                        <field name="shuffle_left_options" />
                    </group>
                </page>
            </xpath>
            
            <!-- Add preview to question form without using Owl directives -->
            <xpath expr="//notebook" position="before">
                <div class="o_match_following_preview" invisible="question_type != 'match_following'">
                    <h5>Match Following Preview</h5>
                    <div class="row">
                        <div class="col-6">
                            <h6>Left Options</h6>
                            <div class="match_left_preview p-2 border rounded">
                                <!-- Use a static preview instead of t-foreach -->
                                <div class="match_item bg-light p-2 mb-2 rounded">Left Option Preview</div>
                                <div class="match_item bg-light p-2 mb-2 rounded">Drag items from here...</div>
                            </div>
                        </div>
                        <div class="col-6">
                            <h6>Right Options</h6>
                            <div class="match_right_preview p-2 border rounded">
                                <!-- Use a static preview instead of t-foreach -->
                                <div class="match_item bg-light p-2 mb-2 rounded">Right Option Preview</div>
                                <div class="match_item bg-light p-2 mb-2 rounded">...to match here</div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
