<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Odoo 17 assets bundle definition -->
    <data>
        <!-- Define frontend assets bundle -->
        <template id="assets_frontend" inherit_id="website.assets_frontend" name="Survey Match Following Frontend Assets">
            <xpath expr="//script[last()]" position="after">
                <script type="text/javascript" src="/custom_elearn/static/src/js/survey_match_following.js"/>
            </xpath>
            <xpath expr="//link[last()]" position="after">
                <link rel="stylesheet" href="/custom_elearn/static/src/css/survey_match_following.css"/>
            </xpath>
        </template>

        <!-- For survey specific assets in Odoo 17 -->
        <template id="survey_assets" inherit_id="survey.survey_assets" name="Survey Match Following Survey Assets">
            <xpath expr="//script[last()]" position="after">
                <script type="text/javascript" src="/custom_elearn/static/src/js/survey_match_following.js"/>
            </xpath>
            <xpath expr="//link[last()]" position="after">
                <link rel="stylesheet" href="/custom_elearn/static/src/css/survey_match_following.css"/>
            </xpath>
        </template>

        <!-- Alternative approach for survey pages -->
        <template id="layout_assets" inherit_id="survey.layout" name="Survey Layout Assets">
            <xpath expr="//head" position="inside">
                <script type="text/javascript" src="/custom_elearn/static/src/js/survey_match_following.js"/>
                <link rel="stylesheet" href="/custom_elearn/static/src/css/survey_match_following.css"/>
            </xpath>
        </template>
    </data>
</odoo>
